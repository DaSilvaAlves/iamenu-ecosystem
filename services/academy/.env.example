# Academy API - Environment Variables
# Copy to .env and fill in your local values
# NEVER commit .env to git - contains sensitive information

# ===================================
# Server Configuration
# ===================================
PORT=3003
NODE_ENV="development"
LOG_LEVEL="debug"

# ===================================
# Database (PostgreSQL with academy schema)
# ===================================
# Use schema=academy for multi-schema isolation
# NOTE: Fixed schema from 'marketplace' to 'academy'
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/iamenu?schema=academy"

# ===================================
# Authentication (Shared across all services)
# ===================================
# IMPORTANT: Must match JWT_SECRET in all services
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-random-jwt-secret-minimum-32-chars"

# ===================================
# CORS Configuration
# ===================================
# Frontend URL
CORS_ORIGIN="http://localhost:5173"
