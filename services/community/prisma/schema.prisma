// Prisma Schema - Community API - SQLite (Local Development)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid())
  authorId  String
  groupId   String?
  title     String
  body      String
  category  String
  tags      String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  views     Int      @default(0)
  likes     Int      @default(0)
  useful    Int      @default(0)
  thanks    Int      @default(0)

  comments Comment[]
  group    Group?    @relation(fields: [groupId], references: [id], onDelete: SetNull)

  @@map("posts")
}

model Comment {
  id              String   @id @default(uuid())
  postId          String
  authorId        String
  parentCommentId String?
  body            String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  likes           Int      @default(0)

  post          Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  parentComment Comment?  @relation("CommentReplies", fields: [parentCommentId], references: [id], onDelete: Cascade)
  replies       Comment[] @relation("CommentReplies")

  @@map("comments")
}

model Group {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  type        String   @default("public")
  category    String?
  createdBy   String
  createdAt   DateTime @default(now())
  coverImage  String?

  posts       Post[]
  memberships GroupMembership[]

  @@map("groups")
}

model GroupMembership {
  groupId  String
  userId   String
  joinedAt DateTime @default(now())
  role     String   @default("member")

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([groupId, userId])
  @@map("group_memberships")
}

model Profile {
  userId         String   @id
  restaurantName String?
  locationCity   String?
  locationRegion String?
  restaurantType String?
  bio            String?
  profilePhoto   String?
  coverPhoto     String?
  badges         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("profiles")
}

model Reaction {
  id           String   @id @default(uuid())
  userId       String
  targetType   String
  targetId     String
  reactionType String
  createdAt    DateTime @default(now())

  @@unique([userId, targetType, targetId, reactionType])
  @@map("reactions")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  title     String
  body      String?
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("notifications")
}
