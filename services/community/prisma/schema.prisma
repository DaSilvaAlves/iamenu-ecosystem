// Prisma Schema - Community API - SQLite (Local Development)

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["community"]
}

model Post {
  id        String   @id @default(uuid())
  authorId  String
  groupId   String?
  title     String
  body      String
  category  String
  tags      String
  imageUrl  String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  views     Int      @default(0)
  likes     Int      @default(0)
  useful    Int      @default(0)
  thanks    Int      @default(0)

  author   Profile   @relation("PostAuthor", fields: [authorId], references: [userId], onDelete: Cascade)
  comments Comment[]
  group    Group?    @relation(fields: [groupId], references: [id], onDelete: SetNull)

  @@index([authorId])
  @@index([groupId])
  @@index([category])
  @@index([createdAt(sort: Desc)])
  @@map("posts")
  @@schema("community")
}

model Comment {
  id              String   @id @default(uuid())
  postId          String
  authorId        String
  parentCommentId String?
  body            String
  status          String   @default("active")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  likes           Int      @default(0)

  post          Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  parentComment Comment?  @relation("CommentReplies", fields: [parentCommentId], references: [id], onDelete: Cascade)
  replies       Comment[] @relation("CommentReplies")

  @@index([postId])
  @@index([authorId])
  @@index([createdAt(sort: Desc)])
  @@map("comments")
  @@schema("community")
}

model Group {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  type        String   @default("public")
  category    String?
  createdBy   String
  createdAt   DateTime @default(now())
  coverImage  String?

  posts       Post[]
  memberships GroupMembership[]

  @@map("groups")
  @@schema("community")
}

model GroupMembership {
  groupId  String
  userId   String
  joinedAt DateTime @default(now())
  role     String   @default("member")

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([groupId, userId])
  @@map("group_memberships")
  @@schema("community")
}

model Profile {
  userId         String   @id
  username       String?  @unique
  restaurantName String?
  locationCity   String?
  locationRegion String?
  restaurantType String?
  bio            String?
  profilePhoto   String?
  coverPhoto     String?
  badges         String?
  role           String?  @default("user")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  posts Post[] @relation("PostAuthor")

  @@map("profiles")
  @@schema("community")
}

model Reaction {
  id           String   @id @default(uuid())
  userId       String
  targetType   String
  targetId     String
  reactionType String
  createdAt    DateTime @default(now())

  @@unique([userId, targetType, targetId, reactionType])
  @@map("reactions")
  @@schema("community")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  title     String
  body      String?
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, read])
  @@index([createdAt(sort: Desc)])
  @@map("notifications")
  @@schema("community")
}

model Report {
  id         String    @id @default(uuid())
  reporterId String
  targetType String
  targetId   String
  reason     String
  details    String?
  status     String    @default("pending")
  reviewedBy String?
  reviewedAt DateTime?
  notes      String?
  createdAt  DateTime  @default(now())

  @@index([status])
  @@index([targetType, targetId])
  @@index([createdAt(sort: Desc)])
  @@map("reports")
  @@schema("community")
}

model Follower {
  id          String   @id @default(uuid())
  followerId  String   // User who is following
  followingId String   // User being followed
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("followers")
  @@schema("community")
}

// Refresh Tokens for JWT rotation
model RefreshToken {
  id        String    @id @default(uuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime  @default(now())
  revoked   Boolean   @default(false)
  revokedAt DateTime?
  userAgent String?   // Browser/device info
  ipAddress String?   // IP for security auditing

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("refresh_tokens")
  @@schema("community")
}

// ============================================
// GAMIFICATION SYSTEM
// ============================================

// User Points - cached XP totals for leaderboard performance
model UserPoints {
  userId       String   @id
  totalXP      Int      @default(0)
  level        Int      @default(1)
  currentStreak Int     @default(0)
  longestStreak Int     @default(0)
  lastActiveAt DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([totalXP(sort: Desc)])
  @@index([level(sort: Desc)])
  @@map("user_points")
  @@schema("community")
}

// Points History - log of all points earned
model PointsHistory {
  id          String   @id @default(uuid())
  userId      String
  points      Int
  reason      String   // 'post_created', 'comment_added', 'reaction_received', 'badge_earned', 'streak_bonus'
  referenceId String?  // ID of post/comment/badge that triggered this
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([userId, createdAt(sort: Desc)])
  @@index([reason])
  @@map("points_history")
  @@schema("community")
}

// User Streaks - daily activity tracking
model UserStreak {
  id           String   @id @default(uuid())
  userId       String
  date         DateTime @db.Date
  actionsCount Int      @default(1)  // Number of actions that day

  @@unique([userId, date])
  @@index([userId])
  @@index([date(sort: Desc)])
  @@map("user_streaks")
  @@schema("community")
}

// ============================================
// MODERATION SYSTEM
// ============================================

// User Warnings/Strikes - track user violations
model UserWarning {
  id          String    @id @default(uuid())
  userId      String
  issuedBy    String    // Moderator who issued the warning
  reason      String    // 'spam', 'harassment', 'inappropriate', etc.
  severity    Int       @default(1)  // 1=warning, 2=temp_ban, 3=permanent_ban
  details     String?
  reportId    String?   // Link to report that triggered this
  expiresAt   DateTime? // For temporary bans
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([userId, createdAt(sort: Desc)])
  @@index([severity])
  @@map("user_warnings")
  @@schema("community")
}

// Moderation Action Log - audit trail
model ModerationLog {
  id          String   @id @default(uuid())
  moderatorId String
  action      String   // 'report_approved', 'report_rejected', 'content_removed', 'content_restored', 'user_warned', 'user_banned'
  targetType  String   // 'post', 'comment', 'user', 'report'
  targetId    String
  reason      String?
  metadata    String?  // JSON with extra details
  createdAt   DateTime @default(now())

  @@index([moderatorId])
  @@index([action])
  @@index([targetType, targetId])
  @@index([createdAt(sort: Desc)])
  @@map("moderation_logs")
  @@schema("community")
}

// User Ban Status - quick lookup for banned users
model UserBan {
  userId      String    @id
  bannedBy    String
  reason      String
  type        String    @default("permanent")  // 'temporary', 'permanent'
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())

  @@index([expiresAt])
  @@map("user_bans")
  @@schema("community")
}
